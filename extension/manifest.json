{
  "manifest_version": 2,
  "name": "Amazon Product Comparison",
  "description": "This extension allows users to add Amazon products to a list for future comparison.",
  "version": "1.0",
  "permissions": [
    "storage",
    "https://*.amazon.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.amazon.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}